<template>
<div>
  <h3 class="vheader">业绩统计</h3>
  <SearchParams :length="tableData.length" @search="onSearch"></SearchParams>
  <el-table :data="tableData" border style="width: 100%" :show-summary="true" :summary-method="getSummaries" :max-height="tableHeight">
    <el-table-column prop="PartitionName" label="大区" width="80">
    </el-table-column>
    <el-table-column prop="ProvinceName" label="省" width="80">
    </el-table-column>
    <el-table-column prop="CityName" label="市" width="80">
    </el-table-column>
    <el-table-column prop="ChannelName1" label="一级代理商">
    </el-table-column>
    <el-table-column prop="ChannelName2" label="二级代理商">
    </el-table-column>
    <el-table-column label="应收" header-align="center">
      <el-table-column prop="YSSmall" label="小规模">
      </el-table-column>
      <el-table-column prop="YSGeneral" label="一般纳税人">
      </el-table-column>
      <el-table-column prop="YSHJ" label="合计">
      </el-table-column>
    </el-table-column>
    <el-table-column label="实收" header-align="center">
      <el-table-column prop="SSSmall" label="小规模">
      </el-table-column>
      <el-table-column prop="SSGeneral" label="一般纳税人">
      </el-table-column>
      <el-table-column prop="SSHJ" label="合计">
      </el-table-column>
    </el-table-column>
    <el-table-column label="订单数量" header-align="center">
      <el-table-column prop="OrderNumSmall" label="小规模">
      </el-table-column>
      <el-table-column prop="OrderNumGeneral" label="一般纳税人">
      </el-table-column>
      <el-table-column prop="OrderNumHJ" label="合计">
      </el-table-column>
    </el-table-column>
  </el-table>
</div>
</template>
<script>
import SearchParams from '@/components/searchParams.vue'
import {
  getAgentsReports
} from '../api/api'

export default {
  name: 'statisA',
  data: function () {
    return {
      tableData: [],
      allData: [],
      params: {
        startdate: '',
        enddate: ''
      },
      cities: '',
      tableHeight: 300
    }
  },
  created() {
    this.fetchData()
  },
  mounted() {
    this.tableHeight = document.querySelector('.content-right').offsetHeight - 105
  },
  methods: {
    fetchData() {
      getAgentsReports(this.params).then((res) => {
        this.tableData = res.data
      })
    },
    onSearch(params) {
      this.params.startdate = params.starttime
      this.params.enddate = params.endtime
      this.params.cityCodes = params.ccodes
      this.params.channelname = params.channelname
      this.fetchData()
    },
    getSummaries(param) {
      const {
        columns,
        data
      } = param
      const sums = []
      columns.forEach((column, index) => {
        if (index === 0) {
          sums[index] = '合计'
          return
        }
        const values = data.map(item => Number(item[column.property]))
        if (index > 4) {
          sums[index] = values.reduce((prev, curr) => {
            const value = Number(curr)
            if (!isNaN(value)) {
              return prev + curr
            } else {
              return prev
            }
          }, 0)
        } else {
          sums[index] = '-'
        }
      })

      return sums
    }
  },
  components: {
    SearchParams
  }
}
</script>
